# Stanley Environment Configuration
# Copy this file to .env and configure for your environment
#
# IMPORTANT: Never commit the .env file to version control!
# This file contains sensitive credentials.

# =============================================================================
# Environment
# =============================================================================
STANLEY_ENV=development
# Options: development, staging, production

# =============================================================================
# API Configuration
# =============================================================================
STANLEY_API_PORT=8000
STANLEY_API_URL=http://localhost:8000

# =============================================================================
# Authentication & Security (Phase 0)
# =============================================================================

# JWT Configuration (REQUIRED)
# Generate a secure key with: python -c "import secrets; print(secrets.token_urlsafe(32))"
STANLEY_AUTH_JWT_SECRET_KEY=your-secret-key-at-least-32-characters-long

# JWT algorithm (default: HS256)
# STANLEY_AUTH_JWT_ALGORITHM=HS256

# Token expiration
# STANLEY_AUTH_ACCESS_TOKEN_EXPIRE_MINUTES=15
# STANLEY_AUTH_REFRESH_TOKEN_EXPIRE_DAYS=7

# API Key prefix for generated keys
# STANLEY_AUTH_API_KEY_PREFIX=sk

# Password policy
# STANLEY_AUTH_PASSWORD_MIN_LENGTH=8
# STANLEY_AUTH_PASSWORD_REQUIRE_SPECIAL=true
# STANLEY_AUTH_BCRYPT_ROUNDS=12

# Rate limiting (set to false to disable)
# STANLEY_AUTH_RATE_LIMIT_ENABLED=true

# CORS origins (comma-separated for multiple origins)
# STANLEY_AUTH_CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Cookie settings (set COOKIE_SECURE=false for local development without HTTPS)
# STANLEY_AUTH_COOKIE_SECURE=true
# STANLEY_AUTH_COOKIE_HTTPONLY=true
# STANLEY_AUTH_COOKIE_SAMESITE=lax

# =============================================================================
# Rate Limiting Configuration
# =============================================================================

# Market data endpoints (high frequency allowed)
# STANLEY_RATE_MARKET_DATA_LIMIT=100
# STANLEY_RATE_MARKET_DATA_WINDOW=60

# Analytics endpoints
# STANLEY_RATE_ANALYTICS_LIMIT=30
# STANLEY_RATE_ANALYTICS_WINDOW=60

# Research endpoints
# STANLEY_RATE_RESEARCH_LIMIT=20
# STANLEY_RATE_RESEARCH_WINDOW=60

# Accounting/SEC endpoints (lower limit for SEC courtesy)
# STANLEY_RATE_ACCOUNTING_LIMIT=10
# STANLEY_RATE_ACCOUNTING_WINDOW=60

# Default rate limit for other endpoints
# STANLEY_RATE_DEFAULT_LIMIT=60
# STANLEY_RATE_DEFAULT_WINDOW=60

# =============================================================================
# Database Configuration (Future phases)
# =============================================================================
POSTGRES_USER=stanley
POSTGRES_PASSWORD=stanley_dev_password_change_me
POSTGRES_DB=stanley
POSTGRES_PORT=5432

# =============================================================================
# Redis Configuration (Future phases - for session/cache)
# =============================================================================
REDIS_PORT=6379
REDIS_PASSWORD=
# Leave empty for development, set strong password for production

# =============================================================================
# External API Keys
# =============================================================================

# OpenBB Platform API Key
# Get from: https://my.openbb.co
OPENBB_API_KEY=

# SEC EDGAR Identity (required for SEC API access)
# Use your email address for SEC compliance
SEC_IDENTITY=your-email@example.com

# Options Flow Provider (optional)
OPTIONS_FLOW_API_KEY=

# Dark Pool Data Provider (optional)
DARK_POOL_API_KEY=

# =============================================================================
# Production Settings (only for production deployment)
# =============================================================================

# SSL/TLS Configuration
# SSL_CERT_PATH=/etc/nginx/ssl/fullchain.pem
# SSL_KEY_PATH=/etc/nginx/ssl/privkey.pem

# Domain Configuration
# DOMAIN=stanley.example.com

# Log Level
# LOG_LEVEL=INFO
